@import "vars.styl"

br()
  border-radius 5px



/////////////////////////////////////////////////////////////////////////

html, body
  height: 100%
  margin: 0
  padding: 0

body
  font: 18px $ff-default
  width: 100%
  height: 100%
  background: $baseColor;
  color: white;

.content
  margin: 1em 2em

.right
  float: right;

#upload-main
  margin-top: 1.5em
  min-width: 100%;
  min-height: 100%;
  display: flex
  flex-direction: row
  justify-content: center
  align-items: flex-start


.container
  min-width 16em
  max-width 90vw
  width: auto
  text-align: center;
  margin: 3.5rem 0 !important;


@media only screen and (max-device-width : 1024px)
  .container
    max-width 100%


.field
  margin-top: 3em

  fieldset
    border: 1px solid $shadedText;
    br()

    legend
      font-size: 130%

.item-list
  text-align left
  list-style-type none
  margin: 0
  padding: 0

  li
    padding: 6px 7px

  //border-bottom: 1px solid $shadedText;

  li:nth-child(even)
    background-color: $tableAlt;

  a
    color: white
    text-decoration underline

.shaded
  color: $shadedText

.btn
  cursor: pointer;
  //float: right;
  //font-size: 13px
  //font-weight: bold;
  //border: none
  //background-color: #e90e1a;
  //color white
  //padding: .05em .3em
  //margin: 0
  //br()
  //cursor: pointer;

.error-message
  margin-top: 2em
  background-color: red;
  color yellow
  padding: 2em;
  br()


h1
  border-bottom: 1px solid shade(white, 10%);
  //overflow: hidden;
  //animation h1ani .33s

  small
    font-size: 60%;
    font-weight: normal;

@keyframes h1ani
  0%
    height: 0
  100%
    height: 41px;

.subheader
  margin-top: -1em;
  margin-bottom: 1em;
  font-size: 80%;
  color $shadedText2

.options
  margin: 1em;
  text-align center

.upload-containerwww
  //border: 9px double tint($baseColor, 10%);
  box-shadow 0 0 10px shade($baseColor, 20%) inset
  border-radius 27px
  padding: 3em;


/////// file list ////////////////////////////////////////////////////////////////
.circled
  border-radius 50%
  background-color: #fff;

#file-commands
  text-align left
  margin-bottom: .3em;
  font-size 80%

button
  font-size: 100%;



