#errors
  margin: 2em 0em 0em 0;
  //padding: .5em 1em;
  font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
  max-width 1280px

  ul
    list-style-type none
    padding: 0
    margin: 0

  .error
    padding: .3em .6em;
    background-color: $errorColor;
    border .5px solid tint($errorColor, 20%)
    box-shadow 0px 0px 3px shade($errorColor, 30%)
    font-size: 75%;

